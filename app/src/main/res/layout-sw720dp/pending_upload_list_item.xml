<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/Linear_workId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/workid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workid"
            android:textColor="#0000f0"
            android:textStyle="bold"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_Layout_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear_workId"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="350dip"
            android:layout_height="350dip"
            android:src="@drawable/avatar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_Layout_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="500dip" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Stage"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_Layout_Latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Linear_Layout_stage"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Latitude"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_Layout_Longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Linear_Layout_Latitude"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Longitude"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_Layout_Remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Linear_Layout_Longitude"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Remarks"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" 
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>