<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Light">-->
        <!--&lt;!&ndash;-->
            <!--Theme customizations available in newer API levels can go in-->
            <!--res/values-vXX/styles.xml, while customizations related to-->
            <!--backward-compatibility can go here.-->
        <!--&ndash;&gt;-->
    <!--</style>-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/dashboard_color_3</item>
        <item name="colorPrimaryDark">@color/fastScrollBarColor</item>
        <item name="colorAccent">@color/dashboard_color_3</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="font_circular_medium">
        <item name="android:fontFamily">@string/font_circular_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_circular_book">
        <item name="android:fontFamily">@string/font_circular_book</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_circular_black">
        <item name="android:fontFamily">@string/font_circular_black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_circular_bold">
        <item name="android:fontFamily">@string/font_circular_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_roboto_light">
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_normal">
        <item name="android:fontFamily">@string/font_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>