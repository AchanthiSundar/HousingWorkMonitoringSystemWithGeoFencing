<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nimble_background_white"
    tools:context="com.nic.HousingWorkMonitoringSystemWithGeoFensing.LoginScreen">


        <include
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            layout="@layout/header_view" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/corner_bg_full_screen"
                android:elevation="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_username"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="@dimen/padding"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CCC" />

                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_password"
                    android:maxLines="1"
                    android:padding="@dimen/padding"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>


            <Button
                android:id="@+id/login"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_height"
                android:layout_gravity="center|right"
                android:layout_margin="30dp"
                android:background="@drawable/login_button"
                android:elevation="10dp"
                android:text="@string/btn_login"
                android:textAllCaps="true"
                android:textColor="@color/dashboard_color_3"
                android:visibility="visible" />

        </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_15sdp"
        android:text="Sofware Designed &amp; Developed by NIC"
        android:textColor="#000000"
        android:textSize="@dimen/_15sdp"
        style="@style/font_circular_medium"
        tools:ignore="MissingPrefix" />

</RelativeLayout>
